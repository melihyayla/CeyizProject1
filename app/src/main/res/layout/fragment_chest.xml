<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="right"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_search" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/gordita_bold"
            android:text="Çeyiz Sandığı"
            android:textColor="@color/dusk"
            android:textSize="24sp" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/linear_layout_washing_machine"
                        android:layout_width="0dp"
                        android:layout_height="170dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/linear_layout_border"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/ic_washing_machine" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/gordita_bold"
                            android:text="Beyaz Esya"
                            android:textColor="@color/dusk"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="2dp"
                            android:fontFamily="@font/gordita_regular"
                            android:text="24 Parça"
                            android:textColor="@color/deep_lilac"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/percentage_machine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/tooltip"
                            android:fontFamily="@font/gordita_regular"
                            android:text="30"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <ProgressBar
                            android:id="@+id/progressBarWashingMachine"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp"
                            android:progressDrawable="@drawable/progress_bar_bg_red" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_layout_electric"
                        android:layout_width="0dp"
                        android:layout_height="170dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/linear_layout_border"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/ic_electric" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/gordita_bold"
                            android:text="Elektrikli Aletler"
                            android:textColor="@color/dusk"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="2dp"
                            android:fontFamily="@font/gordita_regular"
                            android:text="24 Parça"
                            android:textColor="@color/deep_lilac"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/percentage_electric"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/tooltip"
                            android:fontFamily="@font/gordita_regular"
                            android:text="50"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <ProgressBar
                            android:id="@+id/progressBarElectric"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp"
                            android:progressDrawable="@drawable/progress_bar_bg_red" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/linear_layout_furniture"
                        android:layout_width="0dp"
                        android:layout_height="170dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/linear_layout_border"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/ic_furnutire" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/gordita_bold"
                            android:text="Beyaz Esya"
                            android:textColor="@color/dusk"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="2dp"
                            android:fontFamily="@font/gordita_regular"
                            android:text="24 Parça"
                            android:textColor="@color/deep_lilac"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/percentage_furnite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/tooltip"
                            android:fontFamily="@font/gordita_regular"
                            android:text="40"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <ProgressBar
                            android:id="@+id/progressBarFurnite"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp"
                            android:progressDrawable="@drawable/progress_bar_bg_red" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_layout_curtain"
                        android:layout_width="0dp"
                        android:layout_height="170dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/linear_layout_border"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/ic_curtain" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/gordita_bold"
                            android:text="Beyaz Esya"
                            android:textColor="@color/dusk"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="2dp"
                            android:fontFamily="@font/gordita_regular"
                            android:text="15 Parça"
                            android:textColor="@color/deep_lilac"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/percentage_curtain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/tooltip"
                            android:fontFamily="@font/gordita_regular"
                            android:text="30"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <ProgressBar
                            android:id="@+id/progressBarCurtain"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp"
                            android:progressDrawable="@drawable/progress_bar_bg_red" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>